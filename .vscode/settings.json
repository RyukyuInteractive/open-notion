{
  "cSpell.words": ["notionhq", "valibot"],
  "files.exclude": {
    "**/node_modules": true
  },
  "files.associations": {
    "*.json": "json"
  },
  "files.watcherExclude": {
    "**/routeTree.gen.ts": true
  },
  "files.readonlyInclude": {
    "**/routeTree.gen.ts": true
  },
  "github.copilot.chat.codesearch.enabled": true,
  "github.copilot.chat.languageContext.typescript.enabled": true,
  "search.exclude": {
    "bun.lock": true,
    "**/routeTree.gen.ts": true
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.preferences.autoImportFileExcludePatterns": [],
  "[typescript][typescriptreact][json][css]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "biomejs.biome",
    "editor.codeActionsOnSave": {
      "quickfix.biome": "explicit"
    }
  },
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "file": ".github/copilot-instructions.commit-message-generation.md"
    }
  ],
  "github.copilot.chat.pullRequestDescriptionGeneration.instructions": [
    {
      "file": ".github/copilot-instructions.pull-request-description-generation.md"
    }
  ],
  "github.copilot.chat.reviewSelection.instructions": [
    {
      "file": ".github/copilot-instructions.review-selection.md"
    }
  ],
  "github.copilot.chat.testGeneration.instructions": [
    {
      "file": ".github/copilot-instructions.test-generation.md"
    }
  ]
}
